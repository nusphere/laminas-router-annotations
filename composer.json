{
  "name": "nubox/laminas-router-annotations",
  "description": "Use Symfony Route Annotations for Laminas Controller",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Sebastian Hopfe",
      "email": "nusphere83@gmail.com"
    }
  ],
  "require": {
    "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
    "symfony/routing": "*",
    "laminas/laminas-router": "*"
  },
  "require-dev": {
    "laminas/laminas-coding-standard": "~2.5.0",
    "laminas/laminas-test": "*"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Laminas\\Router\\Annotations\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Laminas\\Router\\Annotations\\Test\\": "tests"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "static-analysis": "psalm --shepherd --stats",
    "test": "phpunit --colors=always"
  }
}
